<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.QuizViewController">
   <children>
      <HBox>
         <children>
            <Button mnemonicParsing="false" onAction="#backButtonClicked" text="Back" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <HBox spacing="15.0">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Creation Quiz!">
               <font>
                  <Font size="27.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <HBox>
         <children>
            <Label fx:id="questionNumberLabel" text="Question 1:" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <StackPane fx:id="stackPane">
         <children>
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#startButtonClicked" text="Start" />
            <MediaView fx:id="mediaView" fitHeight="200.0" fitWidth="200.0" onMouseClicked="#playPauseVid" />
            <Button fx:id="replayButton" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#replayButtonClicked" text="Replay" visible="false" />
            <Label fx:id="correctLabel" text="Correct!">
               <font>
                  <Font size="44.0" />
               </font>
            </Label>
            <Label fx:id="wrongLabel" text="Incorrect!">
               <font>
                  <Font size="46.0" />
               </font>
            </Label>
         </children>
      </StackPane>
      <HBox spacing="15.0">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <TextField fx:id="answerField" onKeyReleased="#keyReleased" />
            <Button fx:id="submitButton" disable="true" mnemonicParsing="false" onAction="#submitButtonClicked" text="Submit" />
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
   </children>
</VBox>
