<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.CreationToolController">
   <children>
      <VBox spacing="10.0">
         <children>
            <Label fx:id="searchPrompt" text="Enter a search term:">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="searchField">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="5.0" left="5.0" top="5.0" />
                     </padding>
                  </TextField>
                  <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchButtonClicked" prefHeight="26.0" prefWidth="74.0" text="Search">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <TextArea fx:id="searchResultsArea" prefHeight="281.0" prefWidth="549.0" wrapText="true" />
            <Label text="Create audio chunk from selection:">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Name:" />
                  <TextField />
               </children>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </HBox>
            <HBox layoutX="15.0" layoutY="193.0" spacing="10.0">
               <children>
                  <Label alignment="TOP_LEFT" text="Voice:" />
                  <VBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <RadioButton mnemonicParsing="false" text="RadioButton">
                           <toggleGroup>
                              <ToggleGroup fx:id="voiceToggleGroup" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" text="RadioButton" toggleGroup="$voiceToggleGroup" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </HBox>
            <ButtonBar>
               <buttons>
                  <Button id="playButton" fx:id="previewButton" mnemonicParsing="false" onAction="#previewButtonClicked" text="Preview" ButtonBar.buttonData="LEFT" />
                  <Button mnemonicParsing="false" text="Save" ButtonBar.buttonData="LEFT" />
               </buttons>
            </ButtonBar>
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
      <VBox spacing="10.0">
         <children>
            <Label text="Audio chunks to include:">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <ListView>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </ListView>
            <Label text="Number of images to include:">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <Slider blockIncrement="1.0" majorTickUnit="1.0" max="10.0" min="1.0" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1.0" />
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Button alignment="CENTER" mnemonicParsing="false" text="Next" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</HBox>
