<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.CreationToolController">
   <children>
      <VBox spacing="10.0">
         <children>
            <Label fx:id="searchPrompt" text="Enter a search term:">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="searchField">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="5.0" left="5.0" top="5.0" />
                     </padding>
                  </TextField>
                  <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchButtonClicked" prefHeight="26.0" prefWidth="74.0" text="Search">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <TextArea fx:id="searchResultsArea" prefHeight="281.0" prefWidth="400.0" wrapText="true" />
            <Label text="Create audio chunk from selection:">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <Label text="Pitch" />
            <Slider fx:id="pitchSlider" max="300.0" min="50.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="150.0" />
            <Label text="Speed" />
            <Slider fx:id="speedSlider" blockIncrement="0.5" majorTickUnit="0.4" max="3.0" min="0.2" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1.0" />
            <Region prefHeight="5.0" prefWidth="400.0" />
            <ButtonBar>
               <buttons>
                  <Button fx:id="addChunkButton" mnemonicParsing="false" onAction="#addButtonClicked" text="Add" ButtonBar.buttonData="LEFT" />
               </buttons>
            </ButtonBar>
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
      <VBox spacing="10.0" HBox.hgrow="ALWAYS">
         <children>
            <Label text="Audio chunks to include:">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <ListView fx:id="chunksListView" prefHeight="400.0" prefWidth="400.0" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </ListView>
            <ButtonBar>
               <buttons>
                  <Button id="playButton" fx:id="deleteChunkButton" mnemonicParsing="false" onAction="#deleteButtonClicked" text="Delete" ButtonBar.buttonData="LEFT" />
                  <Button fx:id="previewChunkButton" mnemonicParsing="false" onAction="#previewButtonClicked" text="Preview" ButtonBar.buttonData="LEFT" />
               </buttons>
            </ButtonBar>
            <Label text="Number of images to include:">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <Slider fx:id="imageSlider" blockIncrement="1.0" majorTickUnit="1.0" max="10.0" min="1.0" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1.0" />
            <Region prefHeight="18.0" prefWidth="248.0" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Button fx:id="nextButton" alignment="CENTER" disable="true" mnemonicParsing="false" onAction="#nextButtonClicked" text="Next" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</HBox>
