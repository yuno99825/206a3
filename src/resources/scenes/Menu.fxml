<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefWidth="750.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.scenes.MenuController">
   <children>
      <Label text="Welcome to VARpedia">
         <font>
            <Font name="System Bold" size="46.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label fx:id="creationListLabel" prefWidth="130.0" text="Existing creations:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="200.0">
         <children>
            <ButtonBar>
              <buttons>
                <Button fx:id="deleteButton" disable="true" mnemonicParsing="false" onAction="#deleteCreation" text="Delete" />
                  <Button fx:id="playButton" disable="true" mnemonicParsing="false" onAction="#playCreation" prefHeight="26.0" prefWidth="85.0" text="Play" />
                  <Button fx:id="playQuizButton" mnemonicParsing="false" onAction="#openQuizView" text="Play Quiz" />
              </buttons>
            </ButtonBar>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <ListView fx:id="creationListView" />
      <Button mnemonicParsing="false" onAction="#openCreationTool" text="New Creation" />
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="40.0" left="20.0" right="20.0" top="40.0" />
   </padding>
</VBox>
