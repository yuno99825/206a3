<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.scenes.CreationPreviewController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label contentDisplay="CENTER" text="Preview">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" spacing="8.0">
               <children>
                  <Label text="Name of creation:" />
                  <TextField fx:id="nameField" onAction="#confirmButtonClicked" onKeyReleased="#keyReleased" />
               </children>
               <padding>
                  <Insets bottom="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <VBox alignment="CENTER">
               <children>
                  <Label fx:id="nameErrorLabel" alignment="CENTER" text="Creation name can only contain letters, numbers, spaces, - and _." textFill="RED" visible="false" wrapText="true" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <MediaView fx:id="mediaView" fitHeight="400.0" fitWidth="400.0" onMouseClicked="#playPauseVid" />
            <Button fx:id="replayButton" mnemonicParsing="false" onAction="#replayButtonClicked" text="Replay" visible="false" />
         </children>
      </StackPane>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <buttons>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButtonClicked" text="Cancel" />
            <Button fx:id="confirmButton" disable="true" mnemonicParsing="false" onAction="#confirmButtonClicked" text="Confirm" />
         </buttons>
      </ButtonBar>
   </bottom>
</BorderPane>
